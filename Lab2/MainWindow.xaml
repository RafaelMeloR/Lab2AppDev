        <Button x:Name="btn1" Content="Open" Margin="0,193,80,0" Height="43" Width="86" Grid.Column="1" Click="btn1_Click" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Label Content="Lab 2" HorizontalAlignment="Left" Margin="80,54,0,0" VerticalAlignment="Top" Background="White" FontSize="18" FontWeight="Bold"/>

    </Grid>
</Window>
